<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STAFFS"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFF"
        android:background="#369F01"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#006BA7"
                android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="5dp"
                    android:id="@+id/equipolocalfotostaff"
                    app:civ_border_width="2dp"
                    android:saveEnabled="false"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:civ_border_color="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local"
                    android:textSize="20dp"
                    android:textColor="#ffff"
                    android:id="@+id/equipolocalnombrestaff"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#556269">
                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:background="#73EE9C"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASISTE"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"/>

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO ASISTE"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STAFF"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="13dp"
                android:background="#E2EBE5"
                android:gravity="center"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerstafflocales"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#006BA7"
                android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="5dp"
                    android:id="@+id/equipovisitantefotostaff"
                    app:civ_border_width="2dp"
                    android:saveEnabled="false"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:civ_border_color="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local"
                    android:textSize="20dp"
                    android:textColor="#ffff"
                    android:id="@+id/equipovisitantenombrestaff"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#556269">
                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:background="#73EE9C"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASISTE"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"/>

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO ASISTE"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STAFF"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="13dp"
                android:background="#E2EBE5"
                android:gravity="center"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerstaffvisitantes"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:id="@+id/enviarasisatenciastaff"
                android:layout_marginBottom="20dp"
                android:background="#369F01"
                android:text="Enviar Alineaciones"
                android:textColor="#ffff"/>
        </LinearLayout>




    </ScrollView>





</LinearLayout>