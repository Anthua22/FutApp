<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#3D3C3C"
        android:textColor="#fff"
        android:text="FALTAS ACUMULATIVAS"/>

    <TableLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCDBDB">
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="1ª PARTE"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2ª PARTE"/>
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TableRow  android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/faltasprimeras"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/faltassegundas"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="#3D3C3C"
        android:textColor="#fff"
        android:text="TIEMPOS MUERTOS"/>

    <TableLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCDBDB">
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="1ª PARTE"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2ª PARTE"/>
        </TableRow>

    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TableRow  android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/tiempoprimero"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tiemposegundo"/>
        </TableRow>
    </TableLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:textColor="#fff"
        android:id="@+id/enviarfaltastm"
        android:background="#369F01"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"/>
</LinearLayout>